<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/rounded_background_white"
    android:paddingTop="@dimen/margin_twnety"
    android:paddingBottom="@dimen/margin_twnety"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:maxLines="1"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:id="@+id/txtDateLebel"
        android:paddingTop="@dimen/padding_ten"
        android:paddingBottom="@dimen/padding_ten"
        android:gravity="center"
        android:textSize="@dimen/textsizename"
        android:textColor="@color/colorPrimary"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:textColor="@color/login_white"
        android:text=""
        android:paddingTop="@dimen/margin_twnety"
        android:paddingBottom="@dimen/margin_twnety"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button

            android:id="@+id/btnCancel"
            android:textSize="@dimen/btn_text_size"
            android:textColor="@color/colorPrimary"
            android:text="@string/ok"
            android:layout_weight="5"
            android:background="@color/login_white"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>