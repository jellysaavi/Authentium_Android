<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
   android:background="@drawable/rounded_background_welcome"
    android:gravity="center_horizontal"
    android:weightSum="10"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="@dimen/margin_twnety"
        android:padding="@dimen/activity_horizontal_margin"

        android:textSize="20sp"
        android:gravity="center"
        android:text="@string/registered_successfully"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
<ImageView
    android:scaleType="center"
     android:layout_marginTop="@dimen/margin_thirty"
    android:src="@drawable/ic_logo_saavi"
    android:minWidth="400dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

    <LinearLayout
        android:background="@color/grey_text_color"
         android:layout_marginTop="@dimen/fifty"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnBack"
            android:layout_marginTop="1dp"
            android:background="@color/login_white"
            android:textColor="@color/black"
            android:layout_weight="5"
            android:text="@string/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnContinue"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:textColor="@color/black"
            android:background="@color/login_white"

            android:layout_weight="5"
            android:text="@string/btn_countinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>