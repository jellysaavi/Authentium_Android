<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/welcome_background"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_thirty"
    android:paddingLeft="@dimen/padding_fifty"
    android:paddingRight="@dimen/padding_fifty"
    android:paddingTop="@dimen/margin_thirty">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounded_background_white"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/margin_twnety"
            app:srcCompat="@drawable/ic_fill_star_welcome" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_twnety"
            android:text="@string/lebel_important_message"
            android:textColor="@color/black"
            android:textSize="@dimen/frag_welcome_text_size" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_twnety"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/margin_ten">

            <TextView
                android:id="@+id/txtDsc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/message_height"                android:gravity="center"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/frag_welcome_counter" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_twnety"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center"
                android:text="@string/count_down_timer"
                android:textColor="@color/red_bright"
                android:textSize="@dimen/frag_welcome_counter" />

            <TextView
                android:id="@+id/txtCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/red_bright"
                android:textSize="@dimen/frag_welcome_counter" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/btnContinue"
                android:layout_width="@dimen/button_width"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_twnety"
                android:background="@drawable/ripple_button_effect"
                android:text="@string/btn_countinue"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/loginTextSize"
                style="?android:attr/borderlessButtonStyle"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>