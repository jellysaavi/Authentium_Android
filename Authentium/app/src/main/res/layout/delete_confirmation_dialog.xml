<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/rounded_background_white"
    android:paddingTop="@dimen/margin_twnety"
    android:paddingBottom="@dimen/margin_twnety"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:maxLines="1"
        android:paddingLeft="@dimen/padding_fifty"
        android:paddingRight="@dimen/padding_fifty"
        android:id="@+id/txtDateLebel"
        android:paddingTop="@dimen/padding_ten"
        android:paddingBottom="@dimen/padding_ten"
        android:gravity="center"
        android:textSize="@dimen/frag_profile_text_lebel"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/delete_product"/>

    <TextView
        android:id="@+id/txtLabel"
        android:gravity="center"
        android:paddingLeft="@dimen/margin_twnety"
        android:paddingRight="@dimen/margin_twnety"
        android:paddingTop="@dimen/margin_twnety"
        android:paddingBottom="@dimen/margin_twnety"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
       android:textSize="@dimen/prod_name_text_size"/>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_ten">

        <Button
            android:id="@+id/btnCancel"
            android:textSize="@dimen/loginTextSize"
            android:textColor="@color/colorPrimary"
            android:text="@string/no"
            android:layout_weight="5"
            android:background="@drawable/ripple_button_effect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_ten"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:layout_weight="5"
            android:id="@+id/btnContinue"
            android:textSize="@dimen/loginTextSize"
            android:textColor="@color/colorPrimary"
            android:text="@string/yes"
            android:background="@drawable/ripple_button_effect"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>

</LinearLayout>