<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_background_white"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingTop="@dimen/margin_twnety">

    <TextView
        android:id="@+id/alertTittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/padding_ten"
        android:paddingTop="@dimen/padding_ten"
        android:paddingRight="@dimen/padding_ten"
        android:paddingLeft="@dimen/padding_ten"
        android:textColor="@color/black"
        android:textSize="@dimen/frag_profile_text_lebel"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/alertMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingRight="@dimen/padding_ten"
        android:paddingLeft="@dimen/padding_ten"
        android:paddingBottom="@dimen/padding_ten"
        android:paddingTop="@dimen/padding_ten"
        android:textColor="@color/black"
        android:textSize="@dimen/frag_profile_text_lebel" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fifty"
        android:background="@color/grey_text_color"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_weight="5"
            android:background="@color/colorPrimaryUnited"
            android:text="@string/back"
            android:textColor="@color/login_white" />

        <Button
            android:id="@+id/btnOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"

            android:layout_weight="5"
            android:background="@color/colorSecondary"
            android:text="@string/btn_countinue"
            android:textColor="@color/login_white" />
    </LinearLayout>


</LinearLayout>